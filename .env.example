# PrintFarm Scheduler Configuration
# Copy this file to .env and customize

# Database (SQLite is default, works great for single-instance deployments)
DATABASE_URL=sqlite:///./printfarm.db

# Spoolman Integration (optional)
# Set this to your Spoolman instance URL to enable filament sync
# SPOOLMAN_URL=http://localhost:7912

# Scheduler Settings
# Blackout window where no new prints will be scheduled to start
BLACKOUT_START=22:30
BLACKOUT_END=05:30

# Server
HOST=0.0.0.0
PORT=8000
DEBUG=false
